<u><h1>List of Users</h1></u>

<%= form_tag(users_url, class: "navbar-form pull-left", method: :get) do %>
  <%= text_field_tag :search, nil, placeholder:'Search for User', class: 'form-control' %>
<% end %>

<table class = "table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, :class => 'btn btn-small btn-info' %></td>


        <% if session[:user_id] == user.id %>
          <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-warning btn-small' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => 'btn btn-large btn-success' %>
