<% if notice.try(:downcase).try(:include?, 'invalid')  %>
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% elsif notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<div class="jumbotron">
  <h1>Instructors</h1>
</div>

<div class="jumbotron">
  <h3>Search Instructors: </h3>
    <div>
    <%= form_tag(instructors_url, class: "form-group", method: :get) do %>
     <div class="col-lg-5">
        <%= text_field_tag :search, nil, placeholder:'Search By Style', class: 'form-control cl-lg-2' %>
      </div>
    <% end %>
   </div>
</div>

<div class="jumbotron">
  <p>
    <table class = "table content-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Style</th>
<!--           <th>Biography</th> -->
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @instructors.each do |instructor| %>
          <tr>
            <td><%= instructor.name %></td>
            <td><%= instructor.style %></td>
<!--             <td><%= instructor.biography %></td> -->
            <td><%= link_to 'Show', instructor, :class => 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_instructor_path(instructor), :class => 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </p>
  <p>
    <%= link_to 'New Instructor', new_instructor_path, :class => 'btn btn-success btn-large' %>
  </p>
</div>


