<h1>Listing exercises</h1>

<table class = "table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Picture</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.user.name %></td>
        <td><i>Click the Show Button to See Photo</i></td>
<!--         <td> <%= exercise.picture_url%></td> -->
        <td><%= exercise.description %></td>
        <td><%= link_to 'Show', exercise, :class => 'btn btn-small btn-info' %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise), :class => 'btn btn-small btn-warning' %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_exercise_path, :class => 'btn btn-large btn-success' %>
