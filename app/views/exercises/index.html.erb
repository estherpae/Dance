<div class="jumbotron">
  <h1>Listing exercises</h1>
</div>

<div class="jumbotron">
  <h3>Seach Exercises:</h3>
  <div>
  <%= form_tag(exercises_url, class: "form-group", method: :get) do %>
   <div class="col-lg-5">
      <%= text_field_tag :search, nil, placeholder:'Search By Category', class: 'form-control cl-lg-2' %>
    </div>
  <% end %>
  </div>
</div>

<div class="jumbotron">
  <p>
    <table class = "table content-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>User</th>
          <th>Category</th>
    <!--       <th>Picture</th>
          <th>Description</th> -->
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @exercises.each do |exercise| %>
          <tr>
            <td><%= exercise.name %></td>
            <td><%= exercise.user.name %></td>
            <td><%= exercise.category %></td>
    <!--         <td><i>Click the Show Button to See Photo</i></td> -->
    <!--         <td> <%= exercise.picture_url%></td> -->
    <!--         <td><%= exercise.description %></td> -->
            <td><%= link_to 'Show', exercise, :class => 'btn btn-small btn-info' %></td>
            <% if session[:user_id] == exercise.user_id %>
              <td><%= link_to 'Edit', edit_exercise_path(exercise), :class => 'btn btn-small btn-warning' %></td>
              <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </p>
  <p>
    <% if session[:user_id]  %>
      <%= link_to 'New Exercise', new_exercise_path, :class => 'btn btn-large btn-success' %>
    <% else %>
      <p><div class="alert alert-info">Please Sign In to Create a New Exercise</div></p>
    <% end %>
  </p>
</div>




