      <%= f.text_field :picture_url, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :description, class: 'control-label' %><br>
    <div class="col-lg-4">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

