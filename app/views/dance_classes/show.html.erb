<% if notice %>
  <p id="notice">
    <div class="alert alert-success"><%= notice %></div>
  </p>
<% end %>

<div class="jumbotron">
  <p>
    <p>
      <strong>Name:</strong>
      <%= @dance_class.name %>
    </p>

    <p>
      <strong>Instructor:</strong>
     <!--  <%= @dance_class.instructor.name %> -->
      <%= link_to @dance_class.instructor.name, instructor_url(@dance_class.instructor.id)  %>
    </p>

    <p>
      <strong>Studio:</strong>
    <!--   <%= @dance_class.studio.name %> -->
      <%= link_to @dance_class.studio.name, studio_url(@dance_class.studio.id)  %>
    </p>

    <p>
      <strong>When:</strong>
      <%= @dance_class.when %>
    </p>

    <p>
      <strong>Time:</strong>
      <%= @dance_class.time %>
    </p>

    <p>
      <strong>Cost:</strong>
      $<%= @dance_class.cost %>
    </p>
  </p>

</div>

<div class="jumbotron">
  <p>
    <%= link_to 'Edit', edit_dance_class_path(@dance_class) %> |
    <%= link_to 'Back', dance_classes_path %>
  </p>
</div>


