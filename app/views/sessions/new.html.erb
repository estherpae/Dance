<% if notice.try(:downcase).try(:include?, 'invalid')  %>
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% elsif notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<div class="jumbotron">
  <h1>Sign In</h1>
</div>

<div class="jumbotron">
  <p>
    <%= form_tag('/sessions/create', class: 'form-horizontal') do %>
      <div class="form-group col-lg-offset-2">
        <%= label_tag :name, nil, class: 'col-lg-2 control-label' %>
        <div class="col-lg-4">
          <%= text_field_tag :name, nil, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group col-lg-offset-2">
        <%= label_tag :password, nil, class: 'col-lg-2 control-label' %>
        <div class="col-lg-4">
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-5 col-lg-7">
          <%= submit_tag 'Sign In', class: 'btn btn-success btn-large' %>
        </div>
      </div>
    <% end %>
    </form>
  </p>
</div>



